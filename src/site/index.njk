---
layout: base.njk
title: Home
---

<div class="bg-white dark:bg-orange-900">
  <div class="relative isolate overflow-hidden pt-14">
    <img
      src="{{ homepage.hero.backgroundImage }}"
      alt=""
      class="size-full not-dark:hidden absolute inset-0 -z-10 object-cover opacity-10"
    />
    <img
      src="{{ homepage.hero.backgroundImage }}"
      alt=""
      class="size-full absolute inset-0 -z-10 object-cover opacity-10 dark:hidden"
    />
    <div
      aria-hidden="true"
      class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
    >
      <div
        style="
          clip-path: polygon(
            74.1% 44.1%,
            100% 61.6%,
            97.5% 26.9%,
            85.5% 0.1%,
            80.7% 2%,
            72.5% 32.5%,
            60.2% 62.4%,
            52.4% 68.1%,
            47.5% 58.3%,
            45.2% 34.5%,
            27.5% 76.7%,
            0.1% 64.9%,
            17.9% 100%,
            27.6% 76.8%,
            76.1% 97.7%,
            74.1% 44.1%
          );
        "
        class="aspect-1155/678 w-144.5 rotate-30 bg-linear-to-tr sm:w-288.75 relative left-[calc(50%-11rem)] -translate-x-1/2 from-[#ff80b5] to-[#9089fc] opacity-20 sm:left-[calc(50%-30rem)]"
      ></div>
    </div>
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-4xl py-32 sm:py-48 lg:py-56">
        <div class="hidden sm:mb-8 sm:flex sm:justify-center">
          <div
            class="text-sm/6 ring-gray-900/10 hover:ring-gray-900/20 relative rounded-full px-3 py-1 text-gray-600 ring-1 dark:text-gray-200 dark:ring-white/10 dark:hover:ring-white/20"
          >
            {{ homepage.hero.announcementText }}
            <a
              href="{{ homepage.hero.announcementLink }}"
              target="_blank"
              rel="noreferrer"
              class="font-semibold text-orange-600 dark:text-orange-400"
              ><span aria-hidden="true" class="absolute inset-0"></span>Read
              more <span aria-hidden="true">&rarr;</span></a
            >
          </div>
        </div>
        <div class="text-center">
          <h1
            class="text-balance text-5xl font-semibold tracking-tight text-gray-900 dark:text-white sm:text-7xl"
          >
            {{ homepage.hero.headline }}
          </h1>
          <div
            class="text-pretty sm:text-xl/8 mt-8 text-lg font-medium text-gray-600 dark:text-gray-200"
          >
            {{ homepage.hero.subheading | md | safe }}
          </div>
          <div class="mt-10 flex items-center justify-center gap-x-6">
            <a
              href="{{ settings.justgivingUrl }}"
              target="_blank"
              rel="noreferrer"
              class="shadow-xs rounded-md bg-orange-600 px-3.5 py-2.5 text-sm font-semibold text-white hover:bg-orange-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600 dark:bg-orange-500 dark:hover:bg-orange-400 dark:focus-visible:outline-orange-500"
              onclick="gtag('event', 'click', {'event_category': 'outbound', 'event_label': 'Hero Donate Now'})"
              >Donate now</a
            >
            <a
              href="{{ settings.facebookUrl }}"
              target="_blank"
              rel="noreferrer"
              class="text-sm/6 font-semibold text-gray-900 dark:text-white"
              >Follow us on Facebook <span aria-hidden="true">â†’</span></a
            >
          </div>
        </div>
      </div>
    </div>
    <div
      aria-hidden="true"
      class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]"
    >
      <div
        style="
          clip-path: polygon(
            74.1% 44.1%,
            100% 61.6%,
            97.5% 26.9%,
            85.5% 0.1%,
            80.7% 2%,
            72.5% 32.5%,
            60.2% 62.4%,
            52.4% 68.1%,
            47.5% 58.3%,
            45.2% 34.5%,
            27.5% 76.7%,
            0.1% 64.9%,
            17.9% 100%,
            27.6% 76.8%,
            76.1% 97.7%,
            74.1% 44.1%
          );
        "
        class="aspect-1155/678 w-144.5 bg-linear-to-tr sm:w-288.75 relative left-[calc(50%+3rem)] -translate-x-1/2 from-[#ff80b5] to-[#9089fc] opacity-20 sm:left-[calc(50%+36rem)]"
      ></div>
    </div>
  </div>
</div>

<section class="px-5 py-12 md:px-10 md:py-16 lg:py-20">
  <div class="container mx-auto">
    <h2 class="mb-8 text-2xl font-bold lg:text-4xl">
      {{ homepage.video.title }}
    </h2>
    <div class="video-banner container relative h-0 p-10">
      <iframe
        width="1220"
        height="686"
        src="https://www.youtube.com/embed/{{ homepage.video.youtubeId }}"
        title="An overview of Build A School In Kenya"
        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        loading="lazy"
        class="absolute left-0 top-0 box-border block h-full w-full p-2 sm:p-5 md:p-10"
      ></iframe>
    </div>
  </div>
</section>

<section class="px-5 py-12 md:px-10 md:py-16 lg:py-20">
  <div class="container mx-auto">
    <h2 class="mb-8 text-3xl font-bold lg:text-4xl">{{ homepage.projects.title }}</h2>

    {% for project in homepage.projects.items %}
    <div
      class="mb-12 grid gap-4 md:grid-cols-4 lg:mb-16 lg:grid-cols-10 lg:gap-10"
    >
      <div class="md:col-span-2 lg:col-span-4">
        <h3 class="mb-4 text-2xl font-bold">{{ project.name }}</h3>
        <div class="prose">
          {{ project.description | md | safe }}
        </div>
      </div>
      {% if project.images.length == 2 %}
      <div
        class="flex items-start justify-center md:col-span-2 lg:col-span-6"
      >
        <img
          src="{{ project.images[0].src }}"
          class="h-auto w-full"
          alt="{{ project.images[0].alt }}"
          loading="lazy"
        />
      </div>
      <div
        class="flex items-center justify-center md:col-span-4 lg:col-span-10"
      >
        <img
          src="{{ project.images[1].src }}"
          alt="{{ project.images[1].alt }}"
          class="w-full"
          loading="lazy"
        />
      </div>
      {% elif project.images.length == 3 %}
      <div
        class="flex items-start justify-center md:col-span-2 lg:col-span-6"
      >
        <img
          src="{{ project.images[0].src }}"
          alt="{{ project.images[0].alt }}"
          class="h-auto w-full"
          loading="lazy"
        />
      </div>
      <div
        class="flex items-center justify-center md:col-span-2 lg:col-span-5"
      >
        <img
          src="{{ project.images[1].src }}"
          class="w-full"
          alt="{{ project.images[1].alt }}"
          loading="lazy"
        />
      </div>
      <div
        class="flex items-center justify-center md:col-span-2 lg:col-span-5"
      >
        <img
          src="{{ project.images[2].src }}"
          alt="{{ project.images[2].alt }}"
          class="w-full"
          loading="lazy"
        />
      </div>
      {% else %}
      {% for image in project.images %}
      <div class="flex items-center justify-center md:col-span-2 lg:col-span-5">
        <img
          src="{{ image.src }}"
          alt="{{ image.alt }}"
          class="w-full"
          loading="lazy"
        />
      </div>
      {% endfor %}
      {% endif %}
    </div>
    {% endfor %}
  </div>
</section>

<section class="px-5 py-12 md:px-10 md:py-16 lg:py-20">
  <div class="container mx-auto">
    <h2 class="mb-4 text-3xl font-bold">{{ homepage.donations.title }}</h2>
    <div class="prose-lead pb-10 text-xl lg:pb-14">
      {{ homepage.donations.intro | md | safe }}
    </div>
    <div
      class="gap-10 text-center md:grid md:grid-cols-2 md:text-left lg:grid-cols-3"
    >
      {% for option in homepage.donations.options %}
      <div class="prose mb-4 {% if loop.last %}md:col-span-2 md:max-w-none lg:col-span-1{% endif %}"{% if loop.last %} id="fundraise_for_us"{% endif %}>
        <h3 class="text-xl font-bold">{{ option.title }}</h3>
        {{ option.description | md | safe }}
        <p class="not-prose mt-6 flex justify-center md:justify-start">
          <a
            href="{{ settings.justgivingUrl }}"
            target="_blank"
            rel="noreferrer"
            class="{% if option.buttonStyle == 'primary' %}rounded-md bg-orange-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600{% else %}rounded-md bg-white px-4 py-2.5 text-sm font-semibold text-orange-600 shadow-sm ring-1 ring-inset ring-orange-600 hover:bg-orange-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600{% endif %}"
            onclick="gtag('event', 'click', {'event_category': 'outbound', 'event_label': 'JustGiving {{ option.title }}'})"
            >{{ option.buttonText }}</a
          >
        </p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
